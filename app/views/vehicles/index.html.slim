= content_for :pretitle do
  = "#{t('views.navigation.vehicles')}・"
.container.mt-4
  .row
    .col-md-12
      h3.d-flex = t 'views.navigation.vehicles'
      table.table.table-sm.table-striped
        thead
          tr
            th 名称
            th 製造者名
            th 形式
            th 数量
        tbody
          - @vehicles.each do |vehicle|
            tr
              td = vehicle.name
              td = vehicle.make
              td = vehicle.serial
              td = vehicle.amount